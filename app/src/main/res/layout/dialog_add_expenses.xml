<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CD9C27B0"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtExpenseDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Add Expense"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:drawableRight="@drawable/ic_baseline_emergency_24"
        android:drawablePadding="5dp"
        android:text="Type"
        android:textColor="@color/white"
        android:textSize="23dp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spnExpenseType"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/backgr_edit"
        android:backgroundTint="#ECE8E8"
        android:gravity="center"
        android:padding="5dp"
        android:spinnerMode="dropdown"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:drawableRight="@drawable/ic_baseline_emergency_24"
        android:drawablePadding="5dp"
        android:text="Amount"
        android:textColor="@color/white"
        android:textSize="23dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtExpenseAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/backgr_edit"
        android:backgroundTint="#ECE8E8"
        android:inputType="numberDecimal"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="21dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:drawableRight="@drawable/ic_baseline_emergency_24"
        android:drawablePadding="5dp"
        android:text="Time of the expense*"
        android:textColor="@color/white"
        android:textSize="23dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/edtExpenseDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/backgr_edit"
        android:backgroundTint="#ECE8E8"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="21dp" />

    <Button
        android:id="@+id/btnAddExpense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="#00BCD4"
        android:text="Add"
        android:textColor="@color/white"
        android:textSize="21dp" />

</LinearLayout>